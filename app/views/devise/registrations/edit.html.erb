<h2><%= t('.title', resource: resource_class.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="row">
      <%= f.label :email, class: "col-sm-12 col-md-3" %>
      <div class="input-group col-sm-12 col-md-9">
        <%= f.email_field :email, class: "form-control #{field_class(@user, :email)}" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>
      <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
    </p>
  <% end %>

  <div class="form-group">
    <div class="row">
      <%= f.label :password, class: "col-sm-12 col-md-3" %>
      <div class="col-sm-12 col-md-9">
        <div class="input-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control #{field_class(@user, :password)}" %>
        </div>
        <small class="form-text text-muted">
          <%= t('.leave_blank_if_you_don_t_want_to_change_it') %>
        </small>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label :password_confirmation, class: "col-sm-12 col-md-3" %>
      <div class="input-group col-sm-12 col-md-9">
        <%= f.password_field :password_confirmation, class: "form-control #{field_class(@user, :password_confirmation)}" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <%= f.label :current_password, class: "col-sm-12 col-md-3" %>
      <div class="col-sm-12 col-md-9">
        <div class="input-group">
          <%= f.password_field :current_password, class: "form-control #{field_class(@user, :current_password)}" %>
        </div>
        <small class="form-text text-muted">
          <%= t('.we_need_your_current_password_to_confirm_your_changes') %>
        </small>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.submit t('.update'), class: "btn btn-primary offset-md-3" %>
  </div>
<% end %>

<h3><%= t('.cancel_my_account') %></h3>

<p><%= t('.unhappy') %> <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to t('devise.shared.links.back'), :back %>
