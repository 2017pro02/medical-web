<% breadcrumb :nutritions %>

<h1>
  <%=t "activerecord.models.nutrition" %>
  <%= link_to "追加", new_nutrition_path, class: "btn btn-primary" %>
</h1>

<%= search_form_for @q do |f| %>
  <div class="input-group">
    <%= f.search_field :name_cont, class: "form-control", placeholder: t("activerecord.attributes.nutrition.name") %>
    <span class="input-group-btn">
      <%= f.submit class: "btn btn-secondary" %>
    </span>
  </div>
<% end %>

<div id="nutritions" class="row">
  <% @nutritions.each do |nutrition| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card">
        <%= link_to nutrition do %>
          <%= image_tag nutrition.img.url || "", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h4 class="card-title"><%= nutrition.name %></h4>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @nutritions %>
</div>
